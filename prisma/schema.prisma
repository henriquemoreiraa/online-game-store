generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  email     String  @unique
  name      String
  wish_list Games[] @relation("wish_list")
  cart      Games[] @relation("cart")
}

model Games {
  id           String  @id @default(uuid())
  name         String
  price        Float
  game_img     String
  game_trailer String
  genre        Genres  @relation(fields: [genresId], references: [id])
  genresId     String
  wish_list    User?   @relation("wish_list", fields: [wish_listId], references: [id])
  wish_listId  String?
  cart         User?   @relation("cart", fields: [cartId], references: [id])
  cartId       String?
}

model Genres {
  id    String  @id @default(uuid())
  name  String
  games Games[]
}
